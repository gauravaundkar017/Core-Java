package com.app.tester;

import java.sql.*;
import static com.app.utils.DBUtils.openConnection;

public class TestStatement {

	public static void main(String[] args) {
		try (//get db connection
			Connection cn = openConnection(); 
			//create empty stmt, to hold the sql
			Statement st = cn.createStatement();
			//execute select query n getResult
			ResultSet rst = st.executeQuery("Select * from users")	
			) {
			
			//ResultSet Procesing
			//curson --> before 1 st row
			while(rst.next()) {
				/*
				 *  id | first_name | last_name | email |
				 *   password | dob  | status | role  |
				 */
				System.out.printf("Id %d Name %s %s Email %s pwd %s DoB %s Satus %s"
						+ " Role %s %n",rst.getInt(1),rst.getString(2),rst.getString(3)
						,rst.getString(4),rst.getString(5),
						rst.getString(6),rst.getBoolean(7),rst.getString(2));
			}
			
			
		} // JVM : cn.close()
		catch (Exception e) {
			e.printStackTrace();
		}

	}

}
